pipeline {
    agent any

    environment {
        PATH = "/usr/bin:${env.PATH}"
    }

    stages {
        stage('Checkout FastAPI Code') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'fastapi']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'fsddcx8624', url: 'https://lab.ssafy.com/s09-fintech-finance-sub2/S09P22B207']]])
            }
        }
        
        stage('FastAPI Build and Docker Image') {
            steps {
                dir('FastAPI') {
                    sh '''
                    echo 'Building FastAPI application'
                    '''

                    sh 'pip install -r requirements.txt'
                    sh 'python3 scr/main.py'  // main.py 실행

                    echo 'Building Docker image'
                    script {
                        docker.withRegistry('', 'docker-hub-credentials') {
                            def customImage = docker.build('fastapi-app:latest', '.')
                            customImage.push()
                        }
                    }
                }
            }
        }

        stage('Deploy FastAPI') {
            steps {
                script {
                    def containerExists = sh(script: 'docker ps -a --format "{{.Names}}" | grep -q "fastapi"', returnStatus: true)
                    if (containerExists == 0) {
                        sh 'docker stop fastapi'
                        sh 'docker rm fastapi'
                    }
                    sh 'docker run -d -p 8000:8000 --name fastapi fastapi-app:latest'
                }
            }
        }
    }
}
